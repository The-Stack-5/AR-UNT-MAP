* text=auto

# Unity text assets should stay LF so diffs are clean
*.cs       text eol=lf
*.meta     text eol=lf
*.unity    text eol=lf
*.prefab   text eol=lf
*.shader   text eol=lf
*.json     text eol=lf
*.yaml     text eol=lf

# Windows scripts
*.ps1      text eol=crlf
*.bat      text eol=crlf

# Binary assets (never convert line endings)
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.psd      binary
*.tga      binary
*.mp3      binary
*.wav      binary
*.mp4      binary
*.mov      binary
*.ogg      binary
*.fbx      binary
*.anim     binary
